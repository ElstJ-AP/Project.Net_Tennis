@model TennisDomain.Classes.PlayerTeamDivision

@{
    ViewBag.Title = "AddPlayerDivision";
}

<h2>AddPlayerDivision</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>PlayerTeamDivision</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <input type="hidden" name="teamId" value="@ViewBag.teamId">
        <div class="form-group">
            @Html.LabelFor(model => model.PlayerId, "PlayerId", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <select name="playerId" class="js-data-fetch_players" style="width:40%;">
                </select>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DivisionId, "DivisionId", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <select name="divisionId" class="js-data-fetch_divisions" style="width:40%;">
                </select>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to Team", "Edit", new { id = ViewBag.teamId }, null)
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
