@model TennisDomain.Classes.Game

@{
    ViewBag.Title = "Delete game";
}

<h2>Delete game</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Game</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Player1.NameNumber)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Player1.NameNumber)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Player2.NameNumber)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Player2.NameNumber)
        </dd>

        <dt>
            Score
        </dt>

        <dd>
            <table class="pure-table pure-table-bordered">
                <thead>
                    <tr>
                        <th>

                        </th>
                        <th>
                            Player 1
                        </th>
                        <th>
                            Player 2
                        </th>
                    </tr>
                </thead>
                @for (int i = 1; i <= 5; i++)
                {
                    <tr>
                        <td>
                            Set @i
                        </td>
                        <td>
                            @Model.Player1ScoreArray[i - 1]
                        </td>
                        <td>
                            @Model.Player2ScoreArray[i - 1]
                        </td>
                    </tr>
                }

            </table>
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
